            }
        }
        stage('Deploy') {
            steps {
            echo "waiting for approval"
            echo "----------------------------------------"
            input "Do you want to approve the Job to deploy ${app_name}-1.0.${build_number} to Production: ?"
                echo "Deploying ${app_name}-1.0.${BUILD_Number}.zip to non-prod environments"
            }
        }
